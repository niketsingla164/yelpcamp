<% if(success && success.length){ %>
  
    <div class="container mt-2">
        <div class="row ">
            <div class="col-10 offset-1 ">
    <div class="mt-3 alert  bg-secondary alert-dismissible fade show  flex-row  d-flex justify-content-between border-white" role="alert" id="alert-success"style="border-radius: 8px;" >
      <h2 class = "alert-heading text-white">!!! <%= success %> !!!</h2>
      <button type="button" class="btn-light btn-close " data-bs-dismiss="alert" aria-label="Close">
        <span aria-hidden="true text-white">&times;</span>
      </button>
    </div>
    </div>
</div>
</div>
    <% } %>
    <% if(error && error.length){ %>
        <div class="container">
            <div class="row">
                <div class="col-10 offset-1">
        <div class="mt-3 alert  alert-danger  alert-dismissible  flex-row  d-flex justify-content-between" role="alert" style="background-color: #FF7377; border-radius: 10px;">
          <h2 class = "alert-heading text-dark">!!! <%= error %> !!!</h2>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        </div>
    </div>
    </div>
        <% } %>